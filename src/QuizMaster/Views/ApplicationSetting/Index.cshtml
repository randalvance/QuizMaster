@model QuizMaster.Models.ApplicationSettingViewModels.ApplicationSettingListPageViewModel
@{
    ViewBag.Title = "Application Settings";
    Layout = "_LayoutContentPageWithToast";
}

<div class="container-fluid">
    <form asp-controller="ApplicationSetting" asp-action="Index" method="post">
        @for (int i = 0; i < Model.ApplicationSettings.Count; i++)
        {
            <div class="row">
                <div class="form-group col-md-6">
                    <input type="hidden" asp-for="@Model.ApplicationSettings[i].ApplicationSettingId" />
                    <input type="hidden" asp-for="@Model.ApplicationSettings[i].Key" />
                    <input type="hidden" asp-for="@Model.ApplicationSettings[i].Name" />
                    <input type="hidden" asp-for="@Model.ApplicationSettings[i].ApplicationSettingValueType" />
                    <label asp-for="@Model.ApplicationSettings[i].Value">@Model.ApplicationSettings[i].Name</label>
                    <input asp-for="@Model.ApplicationSettings[i].Value" class="form-control" />
                    <span asp-validation-for="@Model.ApplicationSettings[i].Value" class="text-danger"></span>
                </div>
            </div>
        }
        <input type="submit" value="Save" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
